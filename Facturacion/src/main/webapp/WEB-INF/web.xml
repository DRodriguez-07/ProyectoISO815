<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>com.dr.facturacion.ClienteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/cliente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticuloServlet</servlet-name>
        <servlet-class>com.dr.facturacion.ArticuloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticuloServlet</servlet-name>
        <url-pattern>/articulo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VendedorServlet</servlet-name>
        <servlet-class>com.dr.facturacion.VendedorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VendedorServlet</servlet-name>
        <url-pattern>/vendedor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FacturaServlet</servlet-name>
        <servlet-class>com.dr.facturacion.FacturaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FacturaServlet</servlet-name>
        <url-pattern>/factura</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AsientoContableServlet</servlet-name>
        <servlet-class>com.dr.facturacion.AsientoContableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AsientoContableServlet</servlet-name>
        <url-pattern>/asiento</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Menu.jsp</welcome-file>
    </welcome-file-list>
</web-app>
